@using EmployeeWithEntityFramwork.Models
@model EmployeeWithEntityFramwork.Models.Login


@if (Model == null || Model.LoaderInfo == null)
{
    using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div id="inputparams" class="row">

            <fieldset>
                @Html.AntiForgeryToken()

                <div class="editor-label">
                    @Html.LabelFor(model => model.PersonalNumber)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.PersonalNumber)
                    @Html.ValidationMessageFor(model => model.PersonalNumber)
                </div>
                <div style="display: -webkit-inline-box;margin-top: 10px;">
                    <p>
                        <input type="submit" value="Login" id="btn_login" />
                    </p>
                </div>
            </fieldset>
        </div>
    }

}




<div id="firstmsg" style="display:none">
    Open your Mobile App to Authenticate....
</div>
<div id="secondmsg" style="display:none">
    Enter your security Code...
</div>
<div id="loader" style="display:none" class="loader">

</div>




    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btn_login").click(function () {
                $("#loader").toggle();
                $("#firstmsg").show();
                $("#inputparams").hide();
            });
        });
    </script>
